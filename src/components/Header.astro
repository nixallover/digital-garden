---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import SocialLinks from "./SocialLinks.astro";
import { Image } from "astro:assets";
---

<header class="px-8 bg-stone-100 text-stone-700 shadow-lg relative">
  <nav class="flex items-center justify-between">
    <h2 class="text-emerald-900 font-serif italic text-lg">
      <a href="/" class="flex items-center gap-2">
        <Image
          src="/copper-watering-can-icon.svg"
          width={32}
          height={32}
          class="hidden sm:block"
          alt="Hey I'm Nicole"
        />
        <span class="mt-1 opacity-75">{SITE_TITLE}</span>
      </a>
    </h2>

    <div class="flex gap-2">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/garden">Garden</HeaderLink>
      <!-- <HeaderLink href="/illustrations">Illustrations</HeaderLink> -->
      <HeaderLink href="/talks">Talks</HeaderLink>
    </div>

    <SocialLinks class="hidden sm:flex" />
  </nav>
</header>

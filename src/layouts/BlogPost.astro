---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"garden">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      /* .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      } */
      .prose {
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
    </style>
  </head>

  <body class="bg-stone-100 text-stone-800 font-sans font-light text-base">
    <Header />
    <main class="flex justify-center w-full p-12 pb-20">
      <article class="sm:flex sm:flex-col items-center sm:space-x-12 max-w-9xl">
        <!-- <div class="hero-image">
          {
            heroImage && (
              <img
                width={700}
                height={510}
                src={heroImage}
                alt=""
                class="rounded-lg"
              />
            )
          }
        </div> -->
        <div
          class="prose prose-lg prose-stone max-w-4xl prose-h1:font-serif prose-h1:font-light prose-h1:text-7xl prose-h2:font-serif prose-h2:font-light prose-h2:text-5xl prose-h3:font-serif prose-h3:font-light prose-h3:text-3xl prose-h4:font-serif prose-h4:font-light prose-h4:text-xl"
        >
          <div class="my-8 text-center">
            <div
              class="text-emerald-900 mb-4 inline-flex gap-2 text-sm tracking-wide opacity-75"
            >
              <span>First published on <FormattedDate date={pubDate} /></span>
              {
                updatedDate && (
                  <>
                    <span>&middot;</span>
                    <span>
                      Last updated on <FormattedDate date={updatedDate} />
                    </span>
                  </>
                )
              }
            </div>
            <h1>
              {title}
            </h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

  <body class="bg-stone-100 text-stone-800 font-sans font-light text-base">
    <Header />
    <main class="flex justify-center w-full px-12 py-20">
      <section class="flex items-center space-x-12 max-w-7xl">
        <div class="">
          <h1 class="text-3xl md:text-6xl mb-8 font-serif">
            Talks & podcasts <span class="noto-emoji">üéôÔ∏è</span>
          </h1>
          {
            appearances.map((appearance) => (
              <div class="mb-8">
                <div class="text-sm">
                  <span class="bg-slate-800 text-white rounded pl-2 px-1 mr-2">
                    {appearance.type}
                  </span>
                  {appearance.host} &middot; {format(appearance.date, "MMMM y")}
                </div>
                <a
                  href={appearance.url}
                  target="_blank"
                  class="hover:underline"
                >
                  <h2 class="text-lg">{appearance.title}</h2>
                </a>
              </div>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
